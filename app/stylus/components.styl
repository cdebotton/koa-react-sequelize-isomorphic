.post-wall
  center(128em)
  display flex
  flex-flow row wrap
  flex-align stretch
  align-items top

.post
  width 25%
  flex 0 1 auto
  padding 1em

  @keyframes post-in
    from
      opacity 0
      transform translate3d(0, -15%, 0) skew(5deg)
    to
      opacity 1
      transform translate3d(0, 0, 0) skew(0)

  animation post-in 75ms ease-in-out both

  +below(96em)
    width 100% * (1/3)

  +below(72em)
    width 50%

  +below(48em)
    width 100%

  img, iframe
    width 100%
    height auto
