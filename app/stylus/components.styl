.navigation
  a
    font-size 1.5em
    font-weight 100
    text-decoration none
    border-bottom 1px dashed #ccc
    & + a
      margin-left 1em

.post-wall
  center(128em)
  display flex
  flex-flow row wrap
  flex-align stretch
  align-items top

.post
  width 25%
  flex 0 1 auto
  padding 1em

  @keyframes post-in
    from
      opacity 0
      transform translate3d(0, -15%, 0) skew(5deg)
    to
      opacity 1
      transform translate3d(0, 0, 0) skew(0)

  animation post-in 75ms ease-in-out both

  +below(96em)
    width 100% * (1/3)

  +below(72em)
    width 50%

  +below(48em)
    width 100%

  img, iframe
    width 100%
    height auto

.users
  margin 2em 0
  center(128em)
  cf()

.user, .titles
  cf()
  border-bottom 1px solid #ccc
  padding 1em
  font-size 1.25em
  .user-id
    col(1/12)
  .user-link, .user-text
    col(4/12)
  .created-at
    col(2/12)
  .updated-at
    col(2/12)
  .user-destroy
    col(3/12)
    text-align center
  .header
    cursor pointer
    font-weight 800
    text-transform uppercase
    &.active
      color red
